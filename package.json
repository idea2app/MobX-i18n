{
    "name": "mobx-i18n",
    "version": "0.4.0",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "Responsive Translation utility based on TypeScript & MobX",
    "keywords": [
        "translate",
        "international",
        "i18n",
        "utility",
        "toolkit",
        "typescript",
        "mobx",
        "responsive"
    ],
    "homepage": "https://idea2app.github.io/MobX-i18n/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/idea2app/MobX-i18n.git"
    },
    "bugs": {
        "url": "https://github.com/idea2app/MobX-i18n/issues"
    },
    "source": "source/index.ts",
    "types": "dist/index.d.ts",
    "module": "dist/index.esm.js",
    "main": "dist/index.js",
    "dependencies": {
        "@swc/helpers": "^0.5.1",
        "regenerator-runtime": "^0.14.0"
    },
    "peerDependencies": {
        "mobx": ">=4"
    },
    "devDependencies": {
        "@parcel/packager-ts": "~2.9.3",
        "@parcel/transformer-typescript-types": "~2.9.3",
        "husky": "^8.0.3",
        "lint-staged": "^14.0.1",
        "mobx": "^6.10.0",
        "parcel": "~2.9.3",
        "prettier": "^3.0.2",
        "typedoc": "^0.25.0",
        "typedoc-plugin-mdn-links": "^3.1.0",
        "typescript": "~5.2.2"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,json,yml,ts}": "prettier --write"
    },
    "browserslist": "> 0.5%, last 2 versions, not dead, IE 11",
    "targets": {
        "main": {
            "optimize": true
        }
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged",
        "build": "rm -rf dist/ docs/  &&  parcel build  &&  typedoc source/",
        "prepublishOnly": "npm test  &&  npm run build"
    }
}
