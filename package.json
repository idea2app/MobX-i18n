{
    "name": "mobx-i18n",
    "version": "0.3.0",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "Responsive Translation utility based on TypeScript & MobX",
    "keywords": [
        "translate",
        "international",
        "i18n",
        "utility",
        "toolkit",
        "typescript",
        "mobx",
        "responsive"
    ],
    "homepage": "https://ideapp.dev/MobX-i18n/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/idea2app/MobX-i18n.git"
    },
    "bugs": {
        "url": "https://github.com/idea2app/MobX-i18n/issues"
    },
    "source": "source/index.ts",
    "types": "dist/index.d.ts",
    "main": "dist/index.js",
    "peerDependencies": {
        "mobx": ">=4 <6"
    },
    "devDependencies": {
        "husky": "^8.0.2",
        "lint-staged": "^13.0.3",
        "mobx": "^5.15.7",
        "prettier": "^2.7.1",
        "typedoc": "^0.23.21",
        "typescript": "~4.9.3"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,json,yml,ts}": "prettier --write"
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged",
        "build": "rm -rf dist/ docs/  &&  tsc  &&  typedoc source/",
        "prepublishOnly": "npm test  &&  npm run build"
    }
}
