{
    "compilerOptions": {
        "module": "UMD",
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "target": "ES5",
        "lib": ["ES2022", "DOM"],
        "declaration": true,
        "outDir": "dist/"
    },
    "include": ["source/*"],
    "typedocOptions": {
        "name": "MobX i18n",
        "excludeExternals": true,
        "excludePrivate": true,
        "readme": "./ReadMe.md",
        "out": "docs/"
    }
}
