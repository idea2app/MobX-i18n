{
    "compilerOptions": {
        "module": "UMD",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "useDefineForClassFields": true,
        "target": "ES6",
        "lib": ["ES2023", "DOM"],
        "types": ["node", "jest"],
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "dist/"
    },
    "include": ["source/*"],
    "typedocOptions": {
        "name": "MobX i18n",
        "excludeExternals": true,
        "excludePrivate": true,
        "readme": "./ReadMe.md",
        "plugin": ["typedoc-plugin-mdn-links"]
    }
}
